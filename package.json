{
  "name": "nixpkgs-updater",
  "version": "1.0.0",
  "description": "GitHub Action to update Nix packages in a centralized repository",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "lint:fix": "eslint src/**/*.ts __tests__/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "all": "npm run lint && npm run format:check && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shini4i/nixpkgs-updater.git"
  },
  "keywords": [
    "github-action",
    "nix",
    "nixpkgs",
    "automation",
    "flake"
  ],
  "author": "shini4i",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shini4i/nixpkgs-updater/issues"
  },
  "homepage": "https://github.com/shini4i/nixpkgs-updater#readme",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.37.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
